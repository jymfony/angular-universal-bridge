{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./lib",
        "strict": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": ["es5", "dom", "es2015.promise", "es2015.collection", "es2015.iterable", "es2015.core"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"],
    "angularCompilerOptions": {
        "outDir": "aot"
    }
}
